# Environment Configuration Template

# Copy this file to .env in the root directory and fill in your values

# ================================
# Azure Configuration
# ================================

# Your Azure subscription ID (get with: az account show --query id -o tsv)
AZURE_SUBSCRIPTION_ID=

# Azure region for deployment (recommend: eastus2, westeurope, australiaeast)
AZURE_LOCATION=eastus2

# Environment name (will be part of resource names)
AZURE_ENV_NAME=docgenai-dev

# Resource group name (optional - will be auto-generated if empty)
AZURE_RESOURCE_GROUP_NAME=

# ================================
# AI Configuration
# ================================

# Azure OpenAI settings (will be populated after deployment)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_CHAT_DEPLOYMENT=gpt-4o-mini
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# ================================
# Storage Configuration
# ================================

# Azure Storage settings (will be populated after deployment)
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_CONTAINER_NAME=documents
AZURE_STORAGE_CONNECTION_STRING=

# ================================
# Database Configuration
# ================================

# Cosmos DB settings (will be populated after deployment)
AZURE_COSMOS_ENDPOINT=
AZURE_COSMOS_DATABASE_NAME=docgen
AZURE_COSMOS_CONNECTION_STRING=

# ================================
# Search Configuration
# ================================

# Azure AI Search settings (will be populated after deployment)
AZURE_SEARCH_ENDPOINT=
AZURE_SEARCH_INDEX_NAME=documents-index
AZURE_SEARCH_ADMIN_KEY=

# ================================
# Application Configuration
# ================================

# API settings
API_PORT=8000
API_HOST=0.0.0.0

# Frontend settings
REACT_APP_API_URL=http://localhost:8000

# ================================
# Development Settings
# ================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Enable debug mode (true/false)
DEBUG_MODE=false

# ================================
# Workshop Settings
# ================================

# Instructor information
WORKSHOP_INSTRUCTOR_NAME=
WORKSHOP_INSTRUCTOR_EMAIL=

# Workshop date and location
WORKSHOP_DATE=
WORKSHOP_LOCATION=
